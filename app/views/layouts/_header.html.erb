<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Alexandr Basan official site", root_path, id: "logo" %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-9">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to (I18n.t 'menu.about'), root_path + "#about" %></li>
          <li><%= link_to (I18n.t 'skills.skills'), root_path + "#skills" %></li>
          <li><%= link_to (I18n.t 'menu.cv'), root_path + "#cv" %></li>
          <li><%= link_to (I18n.t 'menu.portfolio'), root_path + "#portfolio" %></li>
          <li><%= link_to (I18n.t 'menu.contact_us'), root_path + "#contact_us" %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% if I18n.locale == :ru %>
                  <%= image_tag("ru.png", alt: "RU")+ (" RU") %>
