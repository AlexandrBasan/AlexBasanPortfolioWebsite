<section class="section" id="skills" name="skills">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h3 class="section-title"><%= t ('skills.skills') %></h3>
        <div class="section-title-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 wow fadeInDown animated" data-wow-duration="0.7s" data-wow-delay="0s" style="visibility: visible; -webkit-animation: fadeInDown 0.7s 0s;">
        <h3><%= t ('skills.header') %></h3>
        <p><%= t ('skills.information') %></p>
      </div>
    </div>
    <div class="row personal-skills">
      <div class="col-sm-6 wow fadeInLeft animated" data-wow-duration="0.7s" data-wow-delay="0s" style="visibility: visible; -webkit-animation: fadeInLeft 0.7s 0s;">
        <h6>Ruby</h6>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100" style="width: 92%;">
            92%
          </div>
        </div>
        <h6>Rails</h6>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 86%;">
            95%
          </div>
        </div>
        <h6>Bootstrap</h6>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 78%;">
            95%
          </div>
        </div>
      </div>
      <div class="col-sm-6 wow fadeInRight animated" data-wow-duration="0.7s" data-wow-delay="0s" style="visibility: visible; -webkit-animation: fadeInRight 0.7s 0s;">
        <h6>Javascript</h6>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%;">
            65%
          </div>
        </div>
        <h6>Amazon web services (EC2, S3), Heroku, Apache</h6>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="width: 85%;">
            85%
          </div>
        </div>
        <h6>Google Maps API, Facebook API, Twitter API, Google+ API</h6>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;">
            75%
          </div>
        </div>
      </div>
    </div>
  </div>

  <div align="center">
    <div class="col-md-12"><%= t ('technology.all') %></div>
  </div>
  <%= render 'static_pages/technologies' %>
</section>