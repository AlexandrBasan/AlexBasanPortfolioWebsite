<div style="background: #ededed;" id="rails_sites" name="rails_sites">
  <div class="container">
    <div class="row">
      </br>
      <h3 style="text-align: center; padding-bottom:10px; border-bottom: solid 1px lightgray;"><%= (t 'menu.sites') %></h3>
      <div class="col-md-6">
        <img alt="" src="/assets/macbookpro.png" class="mackbook_image">
        <div class="mackbook">
          <div id="1" class="carousel slide" data-interval="5000" data-ride="carousel">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
              <li data-target="#1" data-slide-to="0" class="active"></li>
              <li data-target="#1" data-slide-to="1"></li>
              <li data-target="#1" data-slide-to="2"></li>
            </ol>
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="active item">
                <%= image_tag("/assets/projects/teleport-ds.com_rails/teleportds1.png") %>
              </div>
              <div class="item">
                <%= image_tag("/assets/projects/teleport-ds.com_rails/teleportds3.png") %>
              </div>
              <div class="item">
                <%= image_tag("/assets/projects/teleport-ds.com_rails/teleportds2.png") %>
              </div>
            </div>
          </div>
        </div>
        <div class="vertical-align text-justify">
          </br>
          </br>
          <div class="row">
            <div style="border-right: 1px solid lightgray" class="col-md-6">
              <h4 style="text-align: center;">
                <%= (t 'sites.teleport') %>
              </h4>
              <p style="text-align: center;"><%= (t 'sites.teleport_info') %></p>
              <h4 style="text-align: center;">
                <a href="http://www.teleport-ds.com" target="_blank"><img alt="" src="/assets/link_web.png" style="width: 131px; height: 40px;"></a>
              </h4>
            </div>
            <div class="col-md-6">
              <h4><%= (t 'technology.technologies') %></h4>
              <p>
              <ul>
                <li><%= (t 'technology.ruby') %></li>
                <li><%= (t 'technology.rails_4_1_5') %></li>
                <li><%= (t 'technology.bootstrap') %></li>
                <li><%= (t 'technology.coffeescript') %></li>
                <li><%= (t 'technology.i18n') %></li>
                <li><%= (t 'technology.pg') %></li>
                <li><%= (t 'technology.heroku') %></li>
                <li><%= (t 'technology.new_relic') %></li>
              </ul>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <img alt="" src="/assets/macbookpro.png" class="mackbook_image">
        <div class="mackbook">
          <div id="11" class="carousel slide" data-interval="5000" data-ride="carousel">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
              <li data-target="#11" data-slide-to="0" class="active"></li>
              <li data-target="#11" data-slide-to="1"></li>
              <li data-target="#11" data-slide-to="2"></li>
              <li data-target="#11" data-slide-to="3"></li>
            </ol>
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="active item">
                <%= image_tag("/assets/projects/dent_saas_site/1.png") %>
              </div>
              <div class="item">
                <%= image_tag("/assets/projects/dent_saas_site/2.png") %>
              </div>
              <div class="item">
                <%= image_tag("/assets/projects/dent_saas_site/3.png") %>
              </div>
              <div class="item">
                <%= image_tag("/assets/projects/dent_saas_site/4.png") %>
              </div>
            </div>
          </div>
        </div>
        <div class="vertical-align text-justify">
          </br>
          </br>
          <div class="row">
            <div style="border-right: 1px solid lightgray" class="col-md-6">
              <h4 style="text-align: center;">
                <%= 'dentsaas.herokuapp.com' %>
              </h4>
              <p style="text-align: center;"><%= (t 'sites.dent_saas_info') %></p>
              <h4 style="text-align: center;">
                <a href="https://dentsaas.herokuapp.com/" target="_blank"><img alt="" src="/assets/link_web.png" style="width: 131px; height: 40px;"></a>
              </h4>
            </div>
            <div class="col-md-6">
              <h4><%= (t 'technology.technologies') %></h4>
              <p>
              <ul>
                <li><%= (t 'technology.ruby') %></li>
                <li><%= (t 'technology.rails_4_1_5') %></li>
                <li><%= (t 'technology.jquery') %></li>
                <li><%= (t 'technology.i18n') %></li>
                <li><%= (t 'technology.pg') %></li>
                <li><%= (t 'technology.heroku') %></li>
                <li><%= (t 'technology.bootstrap') %></li>
                <li><%= (t 'technology.custom_theme') %></li>
                <li><%= (t 'technology.new_relic') %></li>
              </ul>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12" style="text-align: center; margin-bottom: 5px;">
        <!--<%= link_to (I18n.t 'menu.more_sites'), more_sites_path,
                                         class: "btn btn-xs btn-success" %>-->
        <%= link_to (I18n.t 'menu.more_sites'), more_sites_path,
                    class: "btn btn-1 btn-xs btn-success signup" %>
      </div>
    </div>
  </div>
</div>